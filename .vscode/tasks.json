{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build raylib project",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${file}",
                "-o",
                "${fileDirname}/output/main",
                "-L/usr/local/lib",
                "-I/usr/local/include",
                "-lraylib",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lGL",
                "-lX11",
                "-lXrandr",
                "-lXi",
                "-lXcursor",
                "-lXinerama"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
